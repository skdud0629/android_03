<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SCREEN">
        <item name="android:background">#232323</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="logo">
        <item name="android:src">@drawable/logo_dark</item>
    </style>

    <style name="editText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#595959</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">#989898</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>